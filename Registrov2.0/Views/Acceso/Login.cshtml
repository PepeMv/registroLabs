
@{
    ViewBag.Title = "Iniciar Sesion";
}

<h2 class="tituloPage">@ViewBag.Title</h2>
@if (@ViewBag.Error != null)
{
<div class="alert alert-danger">
    @ViewBag.Error
</div>
}


<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <form action="@Url.Content("~/Acceso/Login")" method="post">
            <div class="form-group row">
                <div class="col-md-12">
                    <strong>E-mail</strong>
                    <input type="email" class="form-control" name="user" />
                </div>
                <div class="col-md-12">
                    <strong>Contrasena</strong>
                    <input type="password" class="form-control" name="password" />
                </div>

                <div class="col-md-12">
                    <br />
                    <input type="submit" class="form-control btn-block btn btn-success" value="Iniciar sesion" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">

    </div>
</div>

