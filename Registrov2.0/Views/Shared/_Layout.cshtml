<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top bg-primary">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Resgistro de Asistencia en Laboratorios", "Index", "Administracion", new { area = "" }, new { @class = "navbar-brand " })
            </div>
            <div class="navbar-collapse collapse text-right">
                <ul class="nav navbar-nav">
                    @if (Session["user"] != null)
                    {
                        <li>@Html.ActionLink("Cerrar Sesion", "Login", "Acceso", new { area = "" }, new { @class = "nav-item" })</li>
}
                    else
                    {
                    <li>@Html.ActionLink("Iniciar Sesion", "Login", "Acceso", new { area = "" }, new { @class = "nav-item" })</li>}

                    <li>@Html.ActionLink("Registrar Asistencia", "Index", "Laboratorio", new { area = "" }, new { @class = "nav-item" })</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p media="mediatype"> &copy; JM</p>
        </footer>
    </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
